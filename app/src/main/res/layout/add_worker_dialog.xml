<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical">

        <EditText
            android:id="@+id/isci_adi_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="işçi adını giriniz"
            android:textColor="#000000"
            android:textColorHint="#777474"></EditText>

        <EditText
            android:id="@+id/gunluk_calisma_Et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="günlük çalışma ücretini giriniz"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#777474"></EditText>

        <DatePicker
            android:id="@+id/datepicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:calendarTextColor="#000000"
            android:datePickerMode="calendar"
            android:yearListSelectorColor="#090808"></DatePicker>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/vazgec_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF0000"
            android:onClick="vazgecBtn"
            android:text="vazgeç"
            android:textColor="#000000" />

        <Button
            android:id="@+id/ekle_Btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:backgroundTint="#88FF00"
            android:onClick="ekleBtn"
            android:text="ekle"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>